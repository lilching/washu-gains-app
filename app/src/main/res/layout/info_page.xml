<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <ImageView
        android:id="@+id/infoImage"
        android:layout_width="match_parent"
        android:layout_height="288dp"
        android:layout_marginTop="-220dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:src="@drawable/inspirational"
        />
    <LinearLayout
        android:id="@+id/infoLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="20dp"
        app:layout_constraintTop_toBottomOf="@+id/infoImage"
        android:weightSum="1"
        >

        <ImageView
            android:id="@+id/userIcon"
            android:layout_width="0dp"
            android:layout_height="80dp"
            android:src="@drawable/user_icon"
            android:layout_gravity="center"
            android:layout_weight="0.3"
            android:paddingRight="20dp"
            />

        <TextView
            android:id="@+id/infoUserText"
            android:layout_width="0dp"
            android:layout_height="100dp"
            android:layout_weight="0.7"
            android:gravity="center"
            android:text="User Info"
            android:textSize="40dp" />
    </LinearLayout>

    <Button
        android:id="@+id/logout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toTopOf="@id/info_buttonLayout"
        app:layout_constraintRight_toRightOf="parent"
        android:padding="20dp"
        android:layout_margin="20dp"
        android:text="LogOut"
        />

    <LinearLayout
        android:id="@+id/info_buttonLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        android:weightSum="3"
        >
        <Button
            android:id="@+id/infoAdd"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:textSize="20dp"
            android:layout_weight="1"
            android:text="+"
            />
        <Button
            android:id="@+id/infoProgress"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:textSize="20dp"

            android:layout_weight="1"
            android:text="Progress"
            />
        <Button
            android:id="@+id/infoInfo"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:textSize="20dp"
            android:layout_weight="1"
            android:text="My Info"
            />
    </LinearLayout>



</androidx.constraintlayout.widget.ConstraintLayout>