<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/foodNameText"
        android:layout_width="370dp"
        android:layout_height="wrap_content"
        android:text="Name"
        android:textSize="20dp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/caloriesText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Calories: 100"
        app:layout_constraintStart_toStartOf="@+id/foodNameText"
        app:layout_constraintTop_toBottomOf="@+id/foodNameText" />

    <TextView
        android:id="@+id/carbsText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="28dp"
        android:layout_marginLeft="28dp"
        android:text="Carbs: 100g"
        app:layout_constraintBottom_toBottomOf="@+id/caloriesText"
        app:layout_constraintStart_toEndOf="@+id/caloriesText"
        app:layout_constraintTop_toBottomOf="@+id/foodNameText"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/proteinText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="28dp"
        android:layout_marginLeft="28dp"
        android:text="Protein: 100g"
        app:layout_constraintBottom_toBottomOf="@+id/carbsText"
        app:layout_constraintStart_toEndOf="@+id/carbsText"
        app:layout_constraintTop_toBottomOf="@+id/foodNameText"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/sugarText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="21dp"
        android:text="Sugar: 100g"
        app:layout_constraintStart_toStartOf="@+id/caloriesText"
        app:layout_constraintTop_toTopOf="@+id/caloriesText" />

    <TextView
        android:id="@+id/fatText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Fat: 100g"
        android:layout_marginBottom="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="@+id/carbsText"
        app:layout_constraintTop_toBottomOf="@+id/carbsText" />

</androidx.constraintlayout.widget.ConstraintLayout>