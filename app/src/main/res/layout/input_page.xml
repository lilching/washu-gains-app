<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/inputHeader"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:text="Welcome"
        android:gravity="center"
        android:textSize="50dp"
        android:padding="20dp"
        />
    <LinearLayout
        android:id="@+id/heightInput"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="20dp"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@id/inputHeader"
        android:weightSum="1"

        >
        <EditText
            android:id="@+id/feetInput"
            android:layout_width="175dp"
            android:layout_marginRight="10dp"
            android:inputType="number"
            android:layout_height="50dp"
            android:hint="Enter Feet"
            />
        <EditText
            android:id="@+id/inchInput"
            android:layout_width="175dp"
            android:layout_marginLeft="10dp"
            android:inputType="number"
            android:layout_height="50dp"
            android:hint="and Inches"
            />
    </LinearLayout>

    <EditText
        android:id="@+id/weightInput"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        app:layout_constraintTop_toBottomOf="@id/heightInput"
        android:layout_marginTop="30dp"
        android:inputType="number"
        android:hint="Enter Weight"
        />

    <EditText
        android:id="@+id/caloriesInput"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:paddingLeft="20dp"

        app:layout_constraintTop_toBottomOf="@id/weightInput"
        android:layout_marginTop="50dp"
        android:inputType="number"
        android:hint="Enter Daily Calorie Goal"
        />

    <Button
        android:layout_width="match_parent"
        android:id="@+id/continueButton"
        android:layout_marginLeft="100dp"
        android:text="Continue"
        android:layout_marginRight="100dp"
        android:layout_height="50dp"
        android:gravity="center"
        android:layout_marginTop="50dp"
        app:layout_constraintTop_toBottomOf="@id/caloriesInput"
        />



</androidx.constraintlayout.widget.ConstraintLayout>